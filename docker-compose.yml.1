version: "3"
services:
 phala-node:
   image: ${NODE_IMAGE}
   container_name: phala-node
   hostname: phala-node
   ports:
    - "9933:9933"
    - "9934:9934"
    - "9944:9944"
    - "9945:9945"
    - "30333:30333"
    - "30334:30334"
   environment:
    - NODE_NAME=${NODE_NAME}
    - NODE_ROLE=MINER
    - "PARACHAIN_EXTRA_ARGS=--state-cache-size 671088640 --db-cache 2048 --max-runtime-instances 16"
    - "RELAYCHAIN_EXTRA_ARGS=--state-cache-size 671088640 --db-cache 2048 --max-runtime-instances 16"
   volumes:
    - ${NODE_VOLUMES}
